@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Style="@($"background:{Colors.Shades.White};")" Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Dark"
                       Size="Size.Medium"
                       Edge="Edge.Start"
                       Class="mr-3"
                       OnClick="DrawerToggleLeft">
        </MudIconButton>
        <MudSpacer />
        <MudText Align=Align.Right Color=Color.Dark 
                 Style="font-weight:900">SC Dash 2024</MudText>

        <MudSpacer />
        <!-- Search field large desktop only -->
