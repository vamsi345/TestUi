        <!-- Menü right -->
        <MudMenu Color="Color.Dark" Icon="@Icons.Material.Filled.MoreVert">
            <MudMenuItem>Profile</MudMenuItem>
            <MudMenuItem Icon="@Icons.Material.Outlined.AccountCircle">My account</MudMenuItem>
            <MudMenuItem Icon="@Icons.Material.Filled.HelpOutline">Help</MudMenuItem>
            <MudMenuItem Icon="@Icons.Material.Outlined.Settings">Setting</MudMenuItem>
            <MudMenuItem Icon="@Icons.Material.Filled.Logout">Logout</MudMenuItem>
        </MudMenu>
    </MudAppBar>

    <MudGrid>
        <MudItem>
            <!-- MudDrawer left -->
            <MudDrawer @bind-Open="@_drawerOpenLeft" Elevation="2">
                <MudDrawerHeader>
                    <div class="col container d-flex align-center ml-2">
                        <MudImage Src="images\suclogo.svg" Width="130" Height="40" Alt="Schuller&Company Logo"></MudImage>
                    </div>
                </MudDrawerHeader>

                <MudDrawerContainer>
                    <NavMenu />
                </MudDrawerContainer>
            </MudDrawer>
        </MudItem>
    </MudGrid>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


<!-- MudDrawer left -->
@code {
    string searchString = "";

    bool _drawerOpenLeft = true;

    void DrawerToggleLeft()
    {
        _drawerOpenLeft = !_drawerOpenLeft;
    }

}

@code {

    private bool IsSearchVisible = false;
    private string SearchValue = "";

    private void ToggleSearchField()
    {
        IsSearchVisible = !IsSearchVisible;
    }
}
<style>
    .font-bold {
        font-weight: bold;
    }

    .font-semibold {
        font-weight: 600;
